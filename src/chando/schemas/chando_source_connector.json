{
    "name": "chando-order-source",
    "config": {
        "connector.class": "io.confluent.connect.http.HttpSourceConnector",
        "tasks.max": "1",
        "topic.name.pattern": "chando_orders",
        "url": "https://pos.pages.fm/api/v1/shops/${shop_id}/orders?api_key=${api_key}",
        "method": "GET",
        "headers": "Accept: application/json",
        "poll.interval.ms": "60000",
        "http.offset.mode": "SIMPLE_INCREMENTING",
        "http.initial.offset": "0",
        "confluent.topic.bootstrap.servers": "kafka-1:9092,kafka-2:9092,kafka-3:9092",
        "confluent.topic.replication.factor": "1",
        "key.converter": "org.apache.kafka.connect.storage.StringConverter",
        "value.converter": "io.confluent.connect.avro.AvroConverter",
        "value.converter.schema.registry.url": "http://schema-registry:8081",
        "value.converter.schemas.enable": "true",
        "errors.tolerance": "all",
        "errors.log.enable": "true",
        "errors.log.include.messages": "true"
    }
}